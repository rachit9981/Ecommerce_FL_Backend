# Production Environment Variables - KEEP SECURE!

# Django Settings
DEBUG=False
SECRET_KEY=your_super_secret_production_key_here_make_it_long_and_random

# Database (Use production database)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Razorpay Live Credentials
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXX
RAZORPAY_KEY_SECRET=your_live_razorpay_secret_key

# Firebase Production Config
FIREBASE_CONFIG_PATH=config_production.json

# Email Settings (for order confirmations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_business_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Allowed Hosts (Add your domain)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,127.0.0.1

# CORS Settings (Add your frontend domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
